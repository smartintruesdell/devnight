{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "flatTernaryExpressions": true
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "variable-name": {
      "options": [
        "allow-snake-case",
        "allow-leading-underscore"
      ]
    }
  }
}
